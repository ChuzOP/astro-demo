---
import Header from "../components/Header.astro";
import { Counter } from "../components/Counter.jsx";
import { ViewTransitions } from "astro:transitions";
interface Props {
  //Typescript
  title: string;
}

const { title } = Astro.props; //"Astro" es una variable goblal que funciona entodos los archivos .astro
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <ViewTransitions />
    <title>{title}</title>
  </head>
  <body class="bg-gray-900 min-h-screen pb-32">
    <Header />
    <main class="max-w-5xl px-4 m-auto">
      <slot /> {/* Lo equivalente a un children de react */}
    </main>
    <footer transition:persist>
      <Counter client:visible />
    </footer>
  </body><style is:global>
    html {
      font-family: system-ui, sans-serif;
      background: #13151a;
      background-size: 224px;
      color-scheme: dark light;
      overflow-y: scroll;
    }
  </style>
</html>
